    "configurations": [
        {
            "name": "Launch Edge",
            "port": 9222,
            "request": "attach",
            "type": "pwa-msedge",
            "webRoot": "${workspaceFolder}"
        },
        {
            "name": "Attach MEINE Seite zu Edge",
            "port": 9222,
            "request": "launch",
            "type": "pwa-msedge",
            "webRoot": "${workspaceFolder}",
            "file": "${workspaceFolder}/index.html"
        },
        {
            "name": "Launch Edge mit Meiner Datei",
            "request": "launch",
            "type": "pwa-msedge",
            "webRoot": "${workspaceFolder}",
            "file": "${workspaceFolder}/index.html"
        },
    ]
}